#/bin/bash

shopt -s extglob

cd $(dirname $0)/../dialogs
dialogs=(!(*.output|*~))
cd ..
for dialog in ${dialogs[@]}
do
  echo "################"
  echo "TESTING $dialog"
  echo "################"
  ./appointments.py --dialog dialogs/$dialog
done
echo "################"
echo "ALL TESTS FINISHED"
echo "################"
